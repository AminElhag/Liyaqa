# ===========================================
# Liyaqa Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#   nano .env
#
# Generate secure values:
#   Password: openssl rand -base64 24
#   JWT Secret: openssl rand -base64 32

# ===========================================
# DATABASE (Required)
# ===========================================
POSTGRES_DB=liyaqa
POSTGRES_USER=liyaqa
# Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ===========================================
# SECURITY (Required)
# ===========================================
# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_SECRET_KEY_NOW

# ===========================================
# CORS Configuration (Required)
# ===========================================
# Your frontend domain (use http for initial setup, https after SSL)
CORS_ALLOWED_ORIGINS=http://YOUR_DROPLET_IP

# ===========================================
# FRONTEND API URL (Required)
# ===========================================
# Backend API URL as seen from browser (use http initially, https after SSL)
NEXT_PUBLIC_API_URL=http://YOUR_DROPLET_IP/api

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# Set EMAIL_ENABLED=true to enable email notifications
EMAIL_ENABLED=false
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===========================================
# SMS CONFIGURATION (Optional)
# ===========================================
# Set SMS_ENABLED=true to enable SMS notifications
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===========================================
# ZATCA E-INVOICING (Optional - Saudi Arabia)
# ===========================================
# Set ZATCA_ENABLED=true for Saudi e-invoicing compliance
ZATCA_ENABLED=false
ZATCA_SELLER_NAME=Your Company Name
ZATCA_VAT_NUMBER=300000000000003

# ===========================================
# PAYTABS PAYMENTS (Optional)
# ===========================================
# Uncomment and fill for online payments
# PAYTABS_PROFILE_ID=
# PAYTABS_SERVER_KEY=
# PAYTABS_CALLBACK_URL=https://yourdomain.com/api/payments/callback
# PAYTABS_RETURN_URL=https://yourdomain.com/payment/complete
