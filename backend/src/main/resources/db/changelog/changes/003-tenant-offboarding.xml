<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Changeset 1: tenant_deactivation_logs table -->
    <changeSet id="003-1-create-tenant-deactivation-logs" author="liyaqa">
        <comment>Create tenant deactivation logs for tracking offboarding reasons</comment>

        <createTable tableName="tenant_deactivation_logs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_deactivation_log_tenant"
                             references="tenants(id)"/>
            </column>
            <column name="reason" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="TEXT"/>
            <column name="deactivated_by" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="previous_status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>

        <createIndex tableName="tenant_deactivation_logs" indexName="idx_deactivation_logs_tenant_id">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 2: data_export_jobs table -->
    <changeSet id="003-2-create-data-export-jobs" author="liyaqa">
        <comment>Create data export jobs for tenant data export tracking</comment>

        <createTable tableName="data_export_jobs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_export_job_tenant"
                             references="tenants(id)"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="format" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="requested_by" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="started_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="completed_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="file_url" type="VARCHAR(1024)"/>
            <column name="file_size_bytes" type="BIGINT"/>
            <column name="error_message" type="TEXT"/>
            <column name="expires_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>

        <createIndex tableName="data_export_jobs" indexName="idx_export_jobs_tenant_id">
            <column name="tenant_id"/>
        </createIndex>

        <createIndex tableName="data_export_jobs" indexName="idx_export_jobs_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="data_export_jobs" indexName="idx_export_jobs_tenant_status">
            <column name="tenant_id"/>
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
