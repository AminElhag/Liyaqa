# ============================================
# Liyaqa Backend Environment Variables
# ============================================
# Copy this file to .env and update values for your environment.
# Never commit .env files to version control!

# ----------------------------------------
# Database Configuration
# ----------------------------------------
DATABASE_URL=jdbc:postgresql://localhost:5432/liyaqa
DATABASE_USERNAME=liyaqa
DATABASE_PASSWORD=your_secure_database_password

# ----------------------------------------
# JWT Configuration
# ----------------------------------------
# MUST be at least 32 characters for security
JWT_SECRET=your-secure-jwt-secret-key-must-be-at-least-32-characters-long

# ----------------------------------------
# Spring Profile
# ----------------------------------------
# Options: dev, prod, test
SPRING_PROFILES_ACTIVE=prod

# ----------------------------------------
# Server Configuration
# ----------------------------------------
SERVER_PORT=8080

# ----------------------------------------
# Email Configuration (SMTP)
# ----------------------------------------
EMAIL_ENABLED=false
EMAIL_FROM=noreply@liyaqa.com
EMAIL_BASE_URL=https://app.liyaqa.com

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ----------------------------------------
# SMS Configuration (Twilio)
# ----------------------------------------
SMS_ENABLED=false
SMS_PROVIDER=twilio

# Twilio Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# ----------------------------------------
# CORS Configuration
# ----------------------------------------
# Comma-separated list of allowed origins (no wildcards in production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------
# Docker Image Tag (for docker-compose.prod.yml)
# ----------------------------------------
IMAGE_TAG=latest

# ============================================
# GitHub Actions Secrets Reference
# ============================================
# The following secrets must be configured in GitHub repository settings
# for CI/CD workflows to function properly.
#
# STAGING ENVIRONMENT:
# --------------------
# STAGING_HOST              - Staging server hostname/IP
# STAGING_USER              - SSH username for deployment
# STAGING_SSH_KEY           - SSH private key (PEM format)
# STAGING_DATABASE_URL      - PostgreSQL JDBC connection URL
# STAGING_DATABASE_USERNAME - Database username
# STAGING_DATABASE_PASSWORD - Database password
# STAGING_JWT_SECRET        - JWT signing secret (32+ chars)
# STAGING_EMAIL_ENABLED     - Enable email (true/false)
# STAGING_SMTP_HOST         - SMTP server host
# STAGING_SMTP_PORT         - SMTP server port
# STAGING_SMTP_USERNAME     - SMTP username
# STAGING_SMTP_PASSWORD     - SMTP password
# STAGING_CORS_ORIGINS      - Allowed CORS origins
#
# PRODUCTION ENVIRONMENT:
# -----------------------
# (Same variables with PRODUCTION_ prefix)
# PRODUCTION_HOST
# PRODUCTION_USER
# PRODUCTION_SSH_KEY
# PRODUCTION_DATABASE_URL
# PRODUCTION_DATABASE_USERNAME
# PRODUCTION_DATABASE_PASSWORD
# PRODUCTION_JWT_SECRET
# PRODUCTION_EMAIL_ENABLED
# PRODUCTION_EMAIL_FROM
# PRODUCTION_EMAIL_BASE_URL
# PRODUCTION_SMTP_HOST
# PRODUCTION_SMTP_PORT
# PRODUCTION_SMTP_USERNAME
# PRODUCTION_SMTP_PASSWORD
# PRODUCTION_SMS_ENABLED
# PRODUCTION_TWILIO_ACCOUNT_SID
# PRODUCTION_TWILIO_AUTH_TOKEN
# PRODUCTION_TWILIO_FROM_NUMBER
# PRODUCTION_CORS_ORIGINS
#
# OPTIONAL:
# ---------
# SLACK_WEBHOOK_URL - For deployment notifications
