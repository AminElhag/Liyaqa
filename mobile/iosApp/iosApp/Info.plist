<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Configuration -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>Liyaqa</string>
    <key>CFBundleDisplayName</key>
    <string>Liyaqa</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- URL Schemes for Deep Links -->
    <!-- Handles: liyaqa://payment/complete?status=success&invoiceId=xxx -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.liyaqa.member</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>liyaqa</string>
            </array>
        </dict>
    </array>

    <!-- Universal Links (Associated Domains must be configured in Xcode) -->
    <!-- For: https://app.liyaqa.com/payment/complete -->
    <!-- Note: Requires apple-app-site-association file on app.liyaqa.com -->

    <!-- Scene Configuration -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
    </dict>

    <!-- Launch Screen -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UILaunchScreenBackgroundColor</key>
        <string>systemBackground</string>
    </dict>

    <!-- Supported Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- App Transport Security -->
    <!-- Development: Allow localhost and cleartext for local testing -->
    <!-- Production: Remove NSAllowsArbitraryLoads and add specific domains -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <!-- Allow arbitrary loads for development (remove for production) -->
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <!-- For production, use explicit domain exceptions instead: -->
        <!--
        <key>NSExceptionDomains</key>
        <dict>
            <key>api.liyaqa.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
        -->
    </dict>

    <!-- Privacy Usage Descriptions -->
    <!-- Camera access for potential future QR code scanning -->
    <key>NSCameraUsageDescription</key>
    <string>Camera access is used to scan QR codes for check-in.</string>

    <!-- Photo library access for profile photos -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Photo library access is used to select a profile photo.</string>

    <!-- Face ID for secure authentication -->
    <key>NSFaceIDUsageDescription</key>
    <string>Face ID is used to securely authenticate and access your account.</string>

    <!-- Localization Support -->
    <key>CFBundleLocalizations</key>
    <array>
        <string>en</string>
        <string>ar</string>
    </array>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>

    <!-- Status Bar Configuration -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleDefault</string>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>

    <!-- Background Modes (if needed for notifications) -->
    <!--
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>
    -->
</dict>
</plist>
